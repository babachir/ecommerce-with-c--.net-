<!DOCTYPE html>
<html>
<!-- arobaz  ViewBag.Title- --> 
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> H-Gaming @ViewBag.Title </title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/blueberry.css" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>

    

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script>
    $(window).load(function() {
	$('.blueberry').blueberry();
    });
    </script>

</head>
<body>
    
    <div class="div-Nav">
        <img class="logo" src="../../Content/image/HGamingLogo.png" />
        <div id="divPanier">

            @{
                int nbrArticle = 0;
                if (Session["nbrArticle"] != null)
                {

                    nbrArticle = (int)Session["nbrArticle"];
                }
                }
                <div class="panier"><i></i><a href="/panier"> Panier (@nbrArticle)</a></div>
</div>
        <nav>
            <ul>
                <a href="/Article/index/pc"><li>PC/HARDWARE</li></a>
                <a href="/Article/index/console"><li>CONSOLE</li></a>
                <a href="/Article/index/game"><li>JEUX</li></a>
            </ul>
        </nav>
    </div>
    

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - H-Gaming Application with ASP.NET </p>
        </footer>
    </div>
    <script src="~/Content/jquery.blueberry.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>